{
    "manifest_version": 2,
    "name": "Wikilist - Wikipedia list",
    "description": "A place for your Wikipedia readings",
    "version": "1.0",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html",
        "default_title": "Wikilist - Wikipedia list"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [{
        "matches": ["http://*.wikipedia.org/*", "http://*.wikiwand.com/*",
            "https://*.wikipedia.org/*", "https://*.wikiwand.com/*"
        ],
        "css": ["css/content.css"],
        "js": ["js/content.js"]
    }]
}
